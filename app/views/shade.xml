<Alloy>
  <View id="shade" class="h-32 grid-cols-10" backgroundColor="$.args.shade">
    <Label id="key" text="$.args.key" class="mb-5 text-sm font-bold text-center" />
    <Label id="value" text="$.args.shade.toUpperCase()" class="mb-1 text-xs text-center" />
    <View id="defaultMarker" class="w-2 h-2 rounded-2" visible="$.args.shade === $.args._default" />
  </View>
</Alloy>
